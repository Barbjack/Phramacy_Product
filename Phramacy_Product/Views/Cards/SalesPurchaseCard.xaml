<UserControl x:Class="Phramacy_Product.Views.Cards.SalesPurchaseCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Phramacy_Product.Views.Cards"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    <Border Margin="10" Padding="10" Background="White" CornerRadius="8" materialDesign:ShadowAssist.ShadowDepth="Depth2">
        <StackPanel>
            <TabControl x:Name="TimeTabControl" SelectionChanged="TimeTabControl_SelectionChanged">
                <TabItem Header="Today" Tag="0"/>
                <TabItem Header="7 Days" Tag="7"/>
                <TabItem Header="30 Days" Tag="30"/>
                <TabItem Header="60 Days" Tag="60"/>
            </TabControl>

            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Border Background="#e6f4ea" Padding="10" CornerRadius="10" Margin="5">
                    <StackPanel>
                        <TextBlock Text="Sales" FontSize="20" FontWeight="Bold"/>
                        <TextBlock x:Name="SalesAmountText" Text="₹0" FontSize="24" Foreground="Green"/>
                        <TextBlock x:Name="SalesOrderCountText" FontSize="14" Foreground="Gray"/>
                    </StackPanel>
                </Border>

                <Border Background="#f2f2ff" Padding="10" CornerRadius="10" Margin="5" Grid.Column="1">
                    <StackPanel>
                        <TextBlock Text="Purchase" FontSize="20" FontWeight="Bold"/>
                        <TextBlock x:Name="PurchaseAmountText" Text="₹0" FontSize="24" Foreground="Blue"/>
                        <TextBlock x:Name="PurchaseOrderCountText" FontSize="14" Foreground="Gray"/>
                    </StackPanel>
                </Border>
            </Grid>

            <Border Background="White" Padding="10" CornerRadius="10" Margin="10">
                <StackPanel>
                    <lvc:CartesianChart x:Name="ComparisonChart" Height="250">
                        <lvc:CartesianChart.AxisX>
                            <lvc:Axis Title="Type" Labels="Sales,Purchase"/>
                        </lvc:CartesianChart.AxisX>
                        <lvc:CartesianChart.AxisY>
                            <lvc:Axis Title="Amount"  LabelFormatter="{Binding Formatter}" />
                        </lvc:CartesianChart.AxisY>
                    </lvc:CartesianChart>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                        <StackPanel Orientation="Horizontal" Margin="10,0">
                            <Rectangle Width="60" Height="20" Fill="Green" Margin="0,0,5,0"/>
                            <TextBlock Text="Sales" VerticalAlignment="Center" />
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="10,0">
                            <Rectangle Width="60" Height="20" Fill="Blue" Margin="0,0,5,0"/>
                            <TextBlock Text="Purchase" VerticalAlignment="Center" />
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>
    </Border>
</UserControl>

