<UserControl x:Class="Phramacy_Product.Views.Cards.SalesMargin"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:Phramacy_Product.Views.Cards">
    <Border Margin="10" Padding="10" Background="White" CornerRadius="8" materialDesign:ShadowAssist.ShadowDepth="Depth2">
        <StackPanel>
            <TextBlock Text="Stock Overview" FontWeight="Bold" FontSize="16" Margin="0,0,0,5" />
            <TextBlock Text="Total SKUs: 320" FontSize="14" />
            <TextBlock Text="Low Stock: 12" Foreground="Red" FontSize="14" />
        </StackPanel>
    </Border>
</UserControl>
