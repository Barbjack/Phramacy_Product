<UserControl x:Class="Phramacy_Product.Views.Profile.IntegrationsContent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="700">
    <UserControl.Resources>
        <!-- Style for a modern button -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#4B89F2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="BorderThickness" Value="0"/>
         
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="ButtonBorder" Background="{TemplateBinding Background}" 
                             
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#3A75E5"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#2E5AA3"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="10,0">
                <TextBlock Text="Integrations" 
                           FontSize="22" 
                           FontWeight="SemiBold" 
                           Margin="0,0,0,20"/>

                <!-- Placeholder for integration cards -->
                <TextBlock Text="Connect your account with third-party services to automate tasks and streamline your workflow."
                           Foreground="#666"
                           TextWrapping="Wrap"
                           Margin="0,0,0,20"/>

                <!-- Example Integration Card (E-commerce) -->
                <Border BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="8" Background="White" Padding="20" Margin="0,0,0,15">
                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Ellipse Width="50" Height="50" Fill="#FFD700" Grid.Column="0">
                                <Ellipse.Effect>
                                    <DropShadowEffect Color="#E0E0E0" Opacity="0.5" ShadowDepth="2" BlurRadius="5"/>
                                </Ellipse.Effect>
                            </Ellipse>
                            <StackPanel Grid.Column="1" Margin="15,0,0,0" VerticalAlignment="Center">
                                <TextBlock Text="E-commerce Platform" 
                                           FontWeight="SemiBold" 
                                           FontSize="16"/>
                                <TextBlock Text="Connect to your online store for sales synchronization." 
                                           Foreground="#888" 
                                           TextWrapping="Wrap"/>
                            </StackPanel>
                            <Button Content="Connect" 
                                    Style="{StaticResource ModernButtonStyle}" 
                                    Grid.Column="2"
                                    VerticalAlignment="Center"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Example Integration Card (Payment Gateway) -->
                <Border BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="8" Background="White" Padding="20" Margin="0,0,0,15">
                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Ellipse Width="50" Height="50" Fill="#87CEFA" Grid.Column="0">
                                <Ellipse.Effect>
                                    <DropShadowEffect Color="#E0E0E0" Opacity="0.5" ShadowDepth="2" BlurRadius="5"/>
                                </Ellipse.Effect>
                            </Ellipse>
                            <StackPanel Grid.Column="1" Margin="15,0,0,0" VerticalAlignment="Center">
                                <TextBlock Text="Payment Gateway" 
                                           FontWeight="SemiBold" 
                                           FontSize="16"/>
                                <TextBlock Text="Enable secure online payments for your customers." 
                                           Foreground="#888" 
                                           TextWrapping="Wrap"/>
                            </StackPanel>
                            <Button Content="Connect" 
                                    Style="{StaticResource ModernButtonStyle}" 
                                    Grid.Column="2"
                                    VerticalAlignment="Center"/>
                        </Grid>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
