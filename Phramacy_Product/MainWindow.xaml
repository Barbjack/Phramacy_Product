<Window x:Class="Phramacy_Product.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Phramacy_Product"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        xmlns:components="clr-namespace:Phramacy_Product.Views.Components"
        xmlns:cards="clr-namespace:Phramacy_Product.Views.Cards"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Dashboard" Height="800" Width="1400"
        Background="{DynamicResource MaterialDesignPaper}">
    <DockPanel>
        <components:Header DockPanel.Dock="Top"/>
        <!-- Content Grid with Frame and Dashboard -->
        <Grid>
            <!-- Dashboard Section -->
            <ScrollViewer VerticalScrollBarVisibility="Auto" x:Name="DashboardContent">
                <UniformGrid Columns="3" Rows="3" Margin="10"
                             HorizontalAlignment="Stretch" VerticalAlignment="Top">
                    <cards:SalesPurchaseCard/>
                    <cards:SalesMargin/>
                    <cards:ExpiringItemCard/>
                    <cards:CollectDueAmount/>
                    <cards:PayDueAmount/>
                    <cards:StockOverview/>
                    <cards:StaffOverview/>
                    <cards:UpcomingPdc/>
                </UniformGrid>
            </ScrollViewer>
            <!-- Navigation Frame (initially hidden) -->
            <Frame x:Name="MainFrame"
                   NavigationUIVisibility="Hidden"
                   Visibility="Collapsed"/>
        </Grid>
    </DockPanel>
</Window>
